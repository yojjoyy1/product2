<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user_j.prodect2.MainActivity">

    <TextView android:id="@+id/txtMile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="英哩:"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    <EditText android:id="@+id/edtMile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#0000FF"
        android:layout_below="@+id/txtMile" >
    <requestFocus />
    </EditText >
    <TextView android:id="@+id/txtKm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMile"
        android:textSize="20sp"
        android:textColor="#0000FF"
        android:layout_alignParentLeft="true" />
    <Button android:id="@+id/btnTran"
        android:text="轉換"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtKm"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
